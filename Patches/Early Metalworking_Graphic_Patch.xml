<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Early Metalworking</li>
    </mods>
<match Class="PatchOperationSequence">
  <operations>

	<!-- ================ Coal ================ -->

    <li Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="mkmCoal"]/graphicData</xpath>
      <value>
  	  	<graphicData>
    	  		<shaderType>CutoutComplex</shaderType>
     	 		<texPath>MineableOre</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<linkType>None</linkType>
			<drawSize>(2,2)</drawSize>
      		<color>(130,130,120)</color>
    			<colorTwo>(46,46,46)</colorTwo>
    		</graphicData>
      </value>
    </li>

	<!-- ================ Copper ================ -->

    <li Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="mkmCopper"]/graphicData</xpath>
      <value>
  	  	<graphicData>
    	  		<shaderType>CutoutComplex</shaderType>
     	 		<texPath>MineableOre</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<linkType>None</linkType>
			<drawSize>(2,2)</drawSize>
      		<color>(130,140,140)</color>
    			<colorTwo>(13,167,123)</colorTwo>
    		</graphicData>
      </value>
    </li>

  </operations>
    </match>
  </Operation>

</Patch>