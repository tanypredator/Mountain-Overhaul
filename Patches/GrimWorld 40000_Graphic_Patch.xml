<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>GrimWorld 40,000 - Core Imperialis</li>
    </mods>
<match Class="PatchOperationSequence">
  <operations>

	<!-- ================ Adamantium ================ -->

    <li Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="MineableHP_Adamantium"]/graphicData</xpath>
      <value>
  	  	<graphicData>
    	  		<shaderType>CutoutComplex</shaderType>
     	 		<texPath>MineableOre</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<linkType>None</linkType>
			<drawSize>(2,2)</drawSize>
      		<color>(100,90,80)</color>
    			<colorTwo>(169,170,169)</colorTwo>
    		</graphicData>
      </value>
    </li>

	<!-- ================ Auramite ================ -->

    <li Class="PatchOperationReplace">
      <xpath>Defs/ThingDef[defName="MineableHP_Auramite"]/graphicData</xpath>
      <value>
  	  	<graphicData>
    	  		<shaderType>CutoutComplex</shaderType>
     	 		<texPath>MineableOre</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<linkType>None</linkType>
			<drawSize>(2,2)</drawSize>
      		<color>(100,90,80)</color>
    			<colorTwo>(147,108,71)</colorTwo>
    		</graphicData>
      </value>
    </li>

  </operations>
    </match>
  </Operation>

</Patch>